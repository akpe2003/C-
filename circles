using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace leg8
{
    class Program
    {
        static void Main(string[] args)
        {
            double dRadius;
            double dArea;
            Console.Write("What is the radius of the circle?");
            dRadius = Convert.ToDouble(Console.ReadLine());
            Console.WriteLine();
            dArea = Math.PI * dRadius * dRadius;
            Console.WriteLine("The area of the circle is: " + dArea);
            Console.WriteLine();
            Console.WriteLine("Press any key to close!");
            Console.ReadKey();
        }
    }
}
