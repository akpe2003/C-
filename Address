using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace leg3
{
    class Program
    {
        static void Main(string[] args)
        {
            String sName;
            String sRoom;
            Console.WriteLine("Please what is your full name?");
            sName = Console.ReadLine();
            Console.WriteLine();
            Console.WriteLine("What is your room number?");
            sRoom = Console.ReadLine();
            Console.Clear();
            Console.WriteLine(sName);
            Console.WriteLine();
            Console.WriteLine("Department of Computing & Technology");
            Console.WriteLine("David Goldman Informatics Centre");
            Console.WriteLine("St Peter's Way");
            Console.WriteLine("Sunderland");
            Console.WriteLine("SR6 0DD");
            Console.WriteLine();
            Console.WriteLine(sRoom);
            Console.WriteLine();
            Console.WriteLine("Press any key to close.");
            Console.ReadKey();
        }
    }
}
